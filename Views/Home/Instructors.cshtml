@{
    ViewData["Title"] = "Instructors";
}
<h1> Instructors </h1>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Instructor ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email Address</th>
            <th>Course</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in @Model.Instructors)
            {
                <tr>
                    <th scope="row">@item.InstructorID</th>
                    <td>@item.FirstName</td>
                    <td>@item.LastName</td>
                    <td>@item.Email</td>
                    <td>@item.Course</td>
                </tr>
            }
    </tbody>
</table>